  function verif2(){
    var decision = $("#id_Q2_r6_increase_L_0").is(":checked");
    console.log($("#id_Q2_r6_increase_L_0").is(":checked"));
    if(decision) {
        show("Question3");
        hide("next2");
        show("next3");
        return true;    
    } else {
        if ($("#id_Q2_r6_increase_L_1").is(":checked")) {
            form["Q3_r7_increase_L"].value = 2;
            form["Q4_r8_increase_L"].value = 2;
            
            document.getElementById("form").submit();
            return true;
        } else {
            return false;
        }
    }
  }
  
    function verif3(){
    var decision = $("#id_Q3_r7_increase_L_0").is(":checked");
    console.log($("#id_Q3_r7_increase_L_0").is(":checked"));
    if(decision) {
        show("Question4");
        hide("next3");
        show("next");
       
        return true;
    } else {
        if ($("#id_Q3_r7_increase_L_1").is(":checked")) {
            form["Q4_r8_increase_L"].value = 2;
                        
            document.getElementById("form").submit();
            return true;
        } else {
            return false;
        }
    }
  }

  function next_page(){
        if ($("#id_Q4_r8_increase_L_0").is(":checked") || $("#id_Q4_r8_increase_L_1").is(":checked")) {
            document.getElementById("form").submit();
            return true;
        } else {
            return false;
        }
  }

</script>
